{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "module": "ESNext",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "lib": ["es2020"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}
